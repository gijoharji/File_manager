<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Fm.Card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fm_folder_card_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:gravity="center">

            <!-- Thumbnail / icon -->
            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/fm_folder_icon_size"
                android:layout_height="@dimen/fm_folder_icon_size"
                android:scaleType="centerInside"
                android:src="@drawable/ic_folder_monochrome_24"
                android:tint="?attr/colorPrimary" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp">

            <!-- Title + quantity -->
            <TextView
                android:id="@+id/title"
                style="@style/Fm.Title"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Download (97)"
                android:textAlignment="center" />

            <!-- Folder size -->
            <TextView
                android:id="@+id/meta"
                style="@style/Fm.Meta"
                android:layout_width="match_parent"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="184.02 MB"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
