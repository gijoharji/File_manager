<resources>

    <!-- Reusable card style for grids -->
    <style name="Fm.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">2dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/fm_folder_card_height</item>
        <item name="android:padding">0dp</item>
        <item name="cardBackgroundColor">@color/fm_cardSurface</item>
    </style>

    <!-- Title and meta text -->
    <style name="Fm.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Fm.Meta">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Fm"/>

</resources>
